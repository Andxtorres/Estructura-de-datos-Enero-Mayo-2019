import java.util.Scanner;

public class Main {
	
	public static void main(String args[]) {
		Scanner sc= new Scanner(System.in);
		System.out.println("Ingresa el color de tu cuadrado: ");
		String color= sc.nextLine();
		System.out.println("Ingresa el lado de tu cuadrado: ");
		double side= sc.nextDouble();
		Square s= new Square(color,side);
		System.out.println("El perímetro del cuadrado es: "+s.calculatePerimeter());
		System.out.println("El área del cuadrado es: "+s.calculateArea());
		sc.close();
	}

}
