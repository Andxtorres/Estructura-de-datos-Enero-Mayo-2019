import java.util.Scanner;

public class Main {
	
	public static void main(String args[]) {
		Scanner sc= new Scanner(System.in);
		System.out.println("Ingresa el color de tu equilatero: ");
		String color= sc.nextLine();
		System.out.println("Ingresa el lado de tu equilatero: ");
		double side= sc.nextDouble();
		Equilateral e= new Equilateral(color,side);
		System.out.println("El perímetro del equilatero es: "+e.calculatePerimeter());
		System.out.println("El área del equilatero es: "+e.calculateArea());
		sc.close();
	}

}
